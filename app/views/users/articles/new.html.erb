<% provide(:title, 'new') %>
<h1>記事の新規作成</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @article, url:users_articles_path, local: true) do |f| %>
      <%= f.label :title, class: "label-new" %>
      <%= f.text_field :title, class: "form-control" %>

      <%= f.label :content, class: "label-new" %>
      <%= f.text_area :content, class: "form-control" %>

      <%= f.label :img, class: "label-new" %>
      <%= f.file_field :img, class: "form-control" %>

      <%= f.submit "新規作成", class: "btn btn-primary btn-block btn-new" %>
    <% end %>
    <%= link_to "戻る", users_articles_path %>
  </div>
</div>