<% provide(:title, 'edit') %>
<h1 class="text-center">記事の編集</h1>

<div class="row justify-content-center">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @article, url:users_article_path, local: true) do |f| %>
        <%= f.label :title, class: "label-edit" %>
        <%= f.text_field :title, class: "form-control" %>

        <%= f.label :content, class: "label-edit" %>
        <%= f.text_area :content, class: "form-control" %>

        <%= f.label :img, class: "label-edit" %><br>
        <%= f.file_field :img %>

      <p class="text-center">
        <%= f.submit "更新する", class: "btn btn-primary btn-block btn-edit" %>
      </p>
    <% end %>
    <%= link_to "戻る", users_articles_path %>
  </div>
</div>